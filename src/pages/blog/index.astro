---
// @ts-nocheck
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import BlogCard from "../../components/BlogCard.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);
---

<BaseLayout center={false}>
  <div class="mt-20">
    {
      posts.map((post, i) => (
        <>
          {post.data.date.getFullYear() !==
            (posts[i - 1]?.data.date.getFullYear() || 0) && (
            <h2 class="mb-10 text-lg border hover:bg-[#111111] hover:text-[#EEEEE2] tracking-widest bg-[#EEEEE2] text-[#111111] pl-5 cursor-pointer italic rounded-tl-lg rounded-br-lg">
              {post.data.date.getFullYear()}
            </h2>
          )}
          <BlogCard post={post} />
        </>
      ))
    }
  </div>
</BaseLayout>
